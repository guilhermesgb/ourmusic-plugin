<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android"
  id="ourmusic-plugin"
  version="0.0.1">
    <name>OurMusicPlugin</name>
    <description>OurMusic Cordova plugin to provide native access to Spotify Android SDK</description>
    <author>Guilherme Xibaca, Danilo Pimentxenha and Uian Sol</author>
    <license>Apache 2.0</license>
    <keywords>ourmusic,cordova,plugin</keywords>
    <repo>https://github.com/guilhermesgb/ourmusic-plugin.git</repo>
    <dependency id="cordova-plugin-file" version=">=2.0.0" />
    <js-module src="www/ourmusic-plugin.js" name="ourmusic-plugin">
      <clobbers target="ourmusic-plugin" />
    </js-module>
    <platform name="android">
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="OurMusicPlugin">
          <param name="android-package" value="com.ourmusic.plugin.OurMusicPlugin"/>
          <param name="onload" value="true"/>
        </feature>
      </config-file>
      <config-file target="AndroidManifest.xml" parent="/*">
        <activity android:name="com.ourmusic.plugin.LoginActivity" android:label="@string/app_name">
          <intent-filter>
          </intent-filter>
        </activity>
      </config-file>
      <source-file src="app/src/main/java/com/ourmusic/plugin/OurMusicPlugin.java" target-dir="src/com/ourmusic/plugin"/>
      <source-file src="app/src/main/java/com/ourmusic/plugin/LoginActivity.java" target-dir="src/com/ourmusic/plugin"/>
    </platform>
</plugin>
